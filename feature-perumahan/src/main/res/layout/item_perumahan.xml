<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/medium"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_photo_perumahan"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:background="@color/cardview_dark_background"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_nama_perumahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/small"
            android:layout_marginHorizontal="@dimen/small"
            tools:text="Griya Insan Utama" />

        <TextView
            android:id="@+id/tv_tipe_perumahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginHorizontal="@dimen/small"
            tools:text="Tipe 32" />

        <TextView
            android:id="@+id/tv_ukuran_perumahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_very_small"
            android:layout_marginHorizontal="@dimen/small"
            tools:text="4x12 Menter" />

        <TextView
            android:id="@+id/tv_total_perumahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/small"
            tools:text="400 Unit" />

        <TextView
            android:id="@+id/tv_harga_perumahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginHorizontal="@dimen/small"
            android:layout_marginBottom="@dimen/small_fit"
            tools:text="Rp. 250.000.000" />

    </LinearLayout>
</androidx.cardview.widget.CardView>