<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/small">

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="@dimen/small_fit"
        android:contentDescription="@string/image_icon_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:src="@drawable/ic_add_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/colorPrimaryDark" />

    <com.ridhoafnidev.project.core_resource.components.BaseTextView
        android:id="@+id/tv_title_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small"
        android:gravity="center"
        android:ellipsize="end"
        android:lines="1"
        android:paddingVertical="@dimen/small"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/text_very_small"
        app:base_font_style="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_menu"
        tools:text="@string/title_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>